<Window x:Class="Client.Views.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FOWA-Chat" Height="350" Width="525"
        WindowStyle="SingleBorderWindow" Closing="Window_Closing" Loaded="Window_Loaded" Activated="Window_Activated_1">
    <!--AllowsTransparency="True"-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="258*"/>           
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        
        <Border BorderThickness="2" BorderBrush="Green" Grid.ColumnSpan="2" Margin="10,10,2,110">
            <ScrollViewer>
                <TextBlock x:Name="chatTextBlock" TextWrapping="Wrap" Text="" Grid.ColumnSpan="2"/>
            </ScrollViewer>
        </Border>
        
        <TextBox x:Name="InputTextBox" Margin="10,240,2,10" TextWrapping="Wrap" Text="" Grid.ColumnSpan="2" PreviewKeyDown="InputTextBox_PreviewKeyDown" TextChanged="InputTextBox_TextChanged"/>
        <Label x:Name="charCounterLabel" Content="Zeichen:" HorizontalAlignment="Left" Margin="10,215,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.158,0.231" Height="25"/>
        <Label x:Name="charCounterNumberLabel" Content="" HorizontalAlignment="Left" Margin="64,215,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.816,-0.154" Width="34"/>

    </Grid>
</Window>
