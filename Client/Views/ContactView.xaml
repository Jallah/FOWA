<Window x:Name="ContactWindwo" x:Class="Client.Views.ContactView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModels="clr-namespace:Client.ViewModels" Title="FOWA-Kontakte" Height="323.322" Width="201.413">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModels:UserChatViewModel}">
            <StackPanel Orientation="Vertical">
                <TextBlock FontFamily="Verdana" Text="{Binding Nick}"/>
                <TextBlock FontFamily="Verdana" FontStyle="Italic" FontSize="9">
                    <Run Text="UID: "/>
                    <Run Text="{Binding UID}"/>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Border BorderBrush="Green" BorderThickness="1" Margin="10,33,10,10">
            <ListBox Name="listBox">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <EventSetter Event="MouseDoubleClick" Handler=""></EventSetter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>
        <Button x:Name="AddFriendButton" Content="Freunde suchen" Margin="10,6,10,0" VerticalAlignment="Top" />
    </Grid>
</Window>
