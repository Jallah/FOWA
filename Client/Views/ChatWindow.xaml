<Window x:Class="Client.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FOWA-Chat" Height="350" Width="525"
        WindowStyle="SingleBorderWindow">
    <!--AllowsTransparency="True"-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="258*"/>           
            <ColumnDefinition Width="258*"/>
        </Grid.ColumnDefinitions>
        
        <Border BorderThickness="2" BorderBrush="Green" Grid.ColumnSpan="3" Margin="10,10,10,110">
            <ScrollViewer>
                <TextBlock x:Name="chatTextBlock" TextWrapping="Wrap" Text="" Grid.ColumnSpan="2"/>
            </ScrollViewer>
        </Border>
        
        <TextBox x:Name="inputTextBox" Margin="10,240,10,10" TextWrapping="Wrap" Text="" Grid.ColumnSpan="3" PreviewKeyDown="inputTextBox_PreviewKeyDown" TextChanged="inputTextBox_TextChanged"/>
        <Label x:Name="charCounterLabel" Content="Zeichen:" HorizontalAlignment="Left" Margin="10,215,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.158,0.231" Height="25"/>
        <Label x:Name="charCounterNumberLabel" Content="" HorizontalAlignment="Left" Margin="64,215,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.816,-0.154" Width="34"/>

    </Grid>
</Window>
