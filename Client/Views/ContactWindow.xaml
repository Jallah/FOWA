<Window x:Name="ContactWindwo" x:Class="Client.Views.ContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:Client="clr-namespace:Client"
        Title="FOWA-Kontakte" Height="323.322" Width="201.413">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type Client:Contact}" >
            <StackPanel Orientation="Horizontal">
                <TextBlock FontFamily="Verdana" Text="{Binding NickName}"/>
                <TextBlock Text=" UID: "/>
                <TextBlock FontFamily="Verdana" Text="{Binding UserId}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Border BorderBrush="Green" BorderThickness="1" Margin="10,33,10,10">
            <ListBox Name="listBox">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <EventSetter Event="MouseDoubleClick" Handler="ListeItemDoubleClick"></EventSetter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>
        <Button x:Name="addFriendButton" Content="Freunde suchen" Margin="10,6,10,0" VerticalAlignment="Top" Click="addFriendButton_Click" />
    </Grid>
</Window>
